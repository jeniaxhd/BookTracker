                                                    <!-- streak grid -->
                                                    <GridPane hgap="6.0" vgap="6.0">
                                                        <children>

                                                            <!-- row 0 -->
                                                            <Rectangle width="18.0" height="18.0"
                                                                       GridPane.rowIndex="0"
                                                                       GridPane.columnIndex="0"
                                                                       styleClass="streak-day streak-day--active"/>
                                                            <Rectangle width="18.0" height="18.0"
