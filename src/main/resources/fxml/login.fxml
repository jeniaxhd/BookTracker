<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import java.net.URL?>

<BorderPane
        fx:id="root"
        prefHeight="700.0"
        prefWidth="1100.0"
        xmlns="http://javafx.com/javafx/17.0.12"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="sk.upjs.paz.ui.LoginController"
        styleClass="auth-root">

    <!-- shared auth stylesheet -->
    <stylesheets>
        <URL value="@../css/auth.css"/>
    </stylesheets>

    <!-- LEFT WARM PANEL -->
    <left>
        <VBox prefWidth="420.0"
              spacing="24.0"
              styleClass="auth-left"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="32" right="32" bottom="32" left="32"/>
            </padding>
            <children>

                <!-- Logo + app name -->
                <HBox spacing="12.0" alignment="CENTER_LEFT">
                    <children>
                        <StackPane prefWidth="40.0" prefHeight="40.0"
                                   styleClass="auth-logo-circle">
                            <children>
                                <Label text="B" styleClass="auth-logo-letter"/>
                            </children>
                        </StackPane>
                        <Label text="BookTrack" styleClass="auth-logo-text"/>
                    </children>
                </HBox>

                <!-- Hero text -->
                <VBox spacing="12.0">
                    <children>
                        <Label wrapText="true"
                               text="Your calm space to track reading, build habits, and reflect on books."
                               styleClass="auth-hero-title"/>
                        <Label wrapText="true"
                               text="Continue your reading journey where you left off."
                               styleClass="auth-hero-subtitle"/>
                    </children>
                </VBox>

                <!-- Current book preview card -->
                <VBox spacing="16.0"
                      styleClass="auth-book-card">
                    <children>
                        <HBox spacing="12.0">
                            <children>
                                <Region prefWidth="56.0" prefHeight="80.0"
                                        styleClass="auth-book-cover"/>
                                <VBox spacing="4.0" alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="The Midnight Library"
                                               styleClass="auth-book-title" wrapText="true"/>
                                        <Label text="Matt Haig"
                                               styleClass="auth-book-author"/>
                                        <Label text="In Progress"
                                               styleClass="auth-book-status-pill"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <VBox spacing="6.0">
                            <children>
                                <Label text="Progress"
                                       styleClass="auth-book-progress-label"/>
                                <HBox spacing="8.0" alignment="CENTER_LEFT">
                                    <children>
                                        <ProgressBar prefWidth="260.0"
                                                     progress="0.67"
                                                     styleClass="auth-book-progress-bar"/>
                                        <Label text="67%"
                                               styleClass="auth-book-progress-percent"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Small stat -->
                <HBox spacing="8.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="ðŸ“ˆ" styleClass="auth-stat-icon"/>
                        <Label text="24 books read this year"
                               styleClass="auth-stat-text"/>
                    </children>
                </HBox>

                <Pane VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
    </left>

    <!-- RIGHT SIDE: LOGIN FORM -->
    <center>
        <VBox spacing="24.0"
              styleClass="auth-right"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="40" right="72" bottom="40" left="56"/>
            </padding>
            <children>

                <!-- Title -->
                <VBox spacing="8.0">
                    <children>
                        <Label text="Welcome back ðŸ‘‹"
                               styleClass="auth-title"/>
                        <Label wrapText="true"
                               text="Sign in to continue tracking your reading with BookTrack."
                               styleClass="auth-subtitle"/>
                    </children>
                </VBox>

                <!-- Google button -->
                <Button maxWidth="Infinity"
                        styleClass="auth-google-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8.0">
                            <children>
                                <StackPane prefWidth="24.0" prefHeight="24.0"
                                           styleClass="auth-google-icon-circle">
                                    <children>
                                        <Label text="G"
                                               styleClass="auth-google-icon-letter"/>
                                    </children>
                                </StackPane>
                                <Label text="Continue with Google"
                                       styleClass="auth-google-text"/>
                            </children>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Divider -->
                <HBox alignment="CENTER" spacing="12.0">
                    <children>
                        <Region HBox.hgrow="ALWAYS"
                                styleClass="auth-divider-line"/>
                        <Label text="or continue with email"
                               styleClass="auth-divider-text"/>
                        <Region HBox.hgrow="ALWAYS"
                                styleClass="auth-divider-line"/>
                    </children>
                </HBox>

                <!-- Form -->
                <VBox spacing="16.0">
                    <children>
                        <!-- Email -->
                        <VBox spacing="6.0">
                            <children>
                                <Label text="Email" styleClass="auth-field-label"/>
                                <TextField fx:id="emailField"
                                           promptText="you@example.com"
                                           styleClass="auth-input"/>
                            </children>
                        </VBox>

                        <!-- Password -->
                        <VBox spacing="6.0">
                            <children>
                                <Label text="Password" styleClass="auth-field-label"/>
                                <PasswordField fx:id="passwordField"
                                               promptText="Enter your password"
                                               styleClass="auth-input"/>
                            </children>
                        </VBox>

                        <!-- Remember + Forgot -->
                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                            <children>
                                <CheckBox fx:id="rememberMeCheckBox"
                                          text="Remember me"
                                          styleClass="auth-remember"/>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Hyperlink fx:id="forgotPasswordLink"
                                           onAction="#onForgotPassword"
                                           text="Forgot password?"
                                           styleClass="auth-forgot-link"/>
                            </children>
                        </HBox>

                        <!-- Sign in -->
                        <Button text="Sign In"
                                onAction="#onSignIn"
                                maxWidth="Infinity"
                                styleClass="auth-primary-button"/>
                    </children>
                </VBox>

                <!-- Bottom text -->
                <HBox alignment="CENTER" spacing="4.0">
                    <children>
                        <Label text="Don't have an account?"
                               styleClass="auth-bottom-text"/>
                        <Hyperlink fx:id="createAccountLink"
                                   onAction="#onCreateAccount"
                                   text="Create one"
                                   styleClass="auth-bottom-link"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>
</BorderPane>
