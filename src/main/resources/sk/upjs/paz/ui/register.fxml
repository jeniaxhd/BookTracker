<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane
        prefHeight="700.0"
        prefWidth="1100.0"
        xmlns="http://javafx.com/javafx/17.0.12"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="sk.upjs.paz.ui.RegisterController"
        styleClass="auth-root">

    <!-- Shared auth stylesheet -->
    <stylesheets>
        <URL value="@../../../../css/auth.css"/>
    </stylesheets>

    <!-- LEFT PANEL (top-aligned, like original) -->
    <left>
        <VBox prefWidth="420.0"
              spacing="24.0"
              styleClass="auth-left"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="32" right="32" bottom="32" left="32"/>
            </padding>
            <children>

                <!-- Logo -->
                <HBox spacing="12.0" alignment="CENTER_LEFT">
                    <children>
                        <StackPane prefWidth="40.0" prefHeight="40.0"
                                   styleClass="auth-logo-circle">
                            <children>
                                <Label text="B" styleClass="auth-logo-letter"/>
                            </children>
                        </StackPane>
                        <Label text="BookTrack" styleClass="auth-logo-text"/>
                    </children>
                </HBox>

                <!-- Hero text -->
                <VBox spacing="12.0">
                    <children>
                        <Label wrapText="true"
                               text="Create your reading space."
                               styleClass="auth-hero-title"/>
                        <Label wrapText="true"
                               text="Sign up to track your books, reading sessions, and progress in one cozy place."
                               styleClass="auth-hero-subtitle"/>
                    </children>
                </VBox>

                <!-- Spacer pushes last text down -->
                <Pane VBox.vgrow="ALWAYS"/>

                <Label text="Stay consistent, remember what you read, and feel proud of your progress."
                       wrapText="true"
                       styleClass="auth-hero-subtitle"/>

            </children>
        </VBox>
    </left>

    <!-- RIGHT SIDE: REGISTER FORM (vertically centered) -->
    <center>
        <VBox styleClass="auth-right"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="40" right="72" bottom="40" left="56"/>
            </padding>
            <children>

                <!-- Top spacer for vertical centering -->
                <Pane VBox.vgrow="ALWAYS"/>

                <!-- Main content block -->
                <VBox spacing="24.0"
                      maxWidth="520.0"
                      alignment="CENTER">

                    <!-- Title -->
                    <VBox spacing="8.0">
                        <children>
                            <Label text="Create your account"
                                   styleClass="auth-title"/>
                            <Label wrapText="true"
                                   text="Start tracking your reading, goals, and library in minutes."
                                   styleClass="auth-subtitle"/>
                        </children>
                    </VBox>

                    <!-- Form fields -->
                    <VBox spacing="16.0">
                        <children>

                            <!-- Full name -->
                            <VBox spacing="6.0">
                                <children>
                                    <Label text="Full Name"
                                           styleClass="auth-field-label"/>
                                    <TextField fx:id="fullNameField"
                                               promptText="Enter your full name"
                                               styleClass="auth-input"/>
                                </children>
                            </VBox>

                            <!-- Email -->
                            <VBox spacing="6.0">
                                <children>
                                    <Label text="Email address"
                                           styleClass="auth-field-label"/>
                                    <TextField fx:id="emailField"
                                               promptText="Enter your email"
                                               styleClass="auth-input"/>
                                </children>
                            </VBox>

                            <!-- Password -->
                            <VBox spacing="6.0">
                                <children>
                                    <Label text="Password"
                                           styleClass="auth-field-label"/>
                                    <PasswordField fx:id="passwordField"
                                                   promptText="Create a password"
                                                   styleClass="auth-input"/>
                                </children>
                            </VBox>

                            <!-- Confirm password -->
                            <VBox spacing="6.0">
                                <children>
                                    <Label text="Confirm password"
                                           styleClass="auth-field-label"/>
                                    <PasswordField fx:id="confirmPasswordField"
                                                   promptText="Confirm your password"
                                                   styleClass="auth-input"/>
                                </children>
                            </VBox>

                            <!-- Newsletter checkbox -->
                            <HBox alignment="CENTER_LEFT" spacing="8.0">
                                <children>
                                    <CheckBox fx:id="newsletterCheck"/>
                                    <Label text="Send me occasional reading tips and updates"
                                           wrapText="true"
                                           styleClass="auth-remember"/>
                                </children>
                            </HBox>

                            <!-- Terms text -->
                            <HBox alignment="CENTER_LEFT" spacing="4.0">
                                <children>
                                    <Label text="By creating an account, you agree to the"
                                           styleClass="auth-remember"/>
                                    <Hyperlink text="Terms of Service"
                                               styleClass="auth-bottom-link"/>
                                    <Label text="and"
                                           styleClass="auth-remember"/>
                                    <Hyperlink text="Privacy Policy"
                                               styleClass="auth-bottom-link"/>
                                    <Label text="."
                                           styleClass="auth-remember"/>
                                </children>
                            </HBox>

                            <!-- Error label -->
                            <Label fx:id="errorLabel"
                                   styleClass="auth-error-label"
                                   wrapText="true"
                                   visible="false"
                                   managed="false"/>

                            <!-- Create account button -->
                            <Button fx:id="createAccountButton"
                                    text="Create account"
                                    maxWidth="Infinity"
                                    styleClass="auth-primary-button"
                                    onAction="#onSignUp"/>

                        </children>
                    </VBox>

                    <!-- Bottom text -->
                    <HBox alignment="CENTER" spacing="4.0">
                        <children>
                            <Label text="Already have an account?"
                                   styleClass="auth-bottom-text"/>
                            <Hyperlink fx:id="loginLink"
                                       text="Log in"
                                       styleClass="auth-bottom-link"
                                       onAction="#onGoToLogin"/>
                        </children>
                    </HBox>

                </VBox>

                <!-- Bottom spacer for vertical centering -->
                <Pane VBox.vgrow="ALWAYS"/>

            </children>
        </VBox>
    </center>
</BorderPane>
