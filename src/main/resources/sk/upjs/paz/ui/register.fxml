<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane
        prefHeight="700.0"
        prefWidth="1100.0"
        xmlns="http://javafx.com/javafx/17.0.12"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="sk.upjs.paz.ui.RegisterController"
        styleClass="auth-root">

    <!-- Shared auth stylesheet -->
    <stylesheets>
        <URL value="@../../../../css/auth.css"/>
    </stylesheets>

    <!-- LEFT PANEL (top-aligned, like original) -->
    <left>
        <VBox prefWidth="420.0"
              spacing="24.0"
              styleClass="auth-left"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="32" right="32" bottom="32" left="32"/>
            </padding>
            <children>

                <!-- Logo -->
                <HBox spacing="12.0" alignment="CENTER_LEFT">
                    <children>
                        <StackPane prefWidth="40.0" prefHeight="40.0"
                                   styleClass="auth-logo-circle">
                            <children>
                                <Label text="B" styleClass="auth-logo-letter"/>
                            </children>
                        </StackPane>
                        <Label text="BookTrack" styleClass="auth-logo-text"/>
                    </children>
                </HBox>

                <!-- Hero text -->
                <VBox spacing="12.0">
                    <children>
                        <Label wrapText="true"
                               text="%register.create_your_reading_space"
                               styleClass="auth-hero-title"/>
                        <Label wrapText="true"
                               text="%register.sign_up_to_track_your_books_reading_sessions_and_p"
                               styleClass="auth-hero-subtitle"/>
                    </children>
                </VBox>

                <!-- Spacer pushes last text down -->
                <Pane VBox.vgrow="ALWAYS"/>

                <Label text="%register.stay_consistent_remember_what_you_read_and_feel_pr"
                       wrapText="true"
                       styleClass="auth-hero-subtitle"/>

            </children>
        </VBox>
    </left>

    <!-- RIGHT SIDE: REGISTER FORM (vertically centered) -->
    <center>
        <VBox styleClass="auth-right"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="40" right="72" bottom="40" left="56"/>
            </padding>
            <children>

                <!-- Top spacer for vertical centering -->
                <Pane VBox.vgrow="ALWAYS"/>

                <!-- Main content block -->
                <VBox spacing="24.0"
                      maxWidth="520.0"
                      alignment="CENTER">

                    <!-- Title -->
                    <VBox spacing="8.0">
                        <children>
                            <Label text="%register.create_your_account"
                                   styleClass="auth-title"/>
                            <Label wrapText="true"
                                   text="%register.start_tracking_your_reading_goals_and_library_in_m"
                                   styleClass="auth-subtitle"/>
                        </children>
                    </VBox>

                    <!-- Form fields -->
                    <VBox spacing="16.0">
                        <children>

                            <!-- Full name -->
                            <VBox spacing="6.0">
                                <children>
                                    <Label text="%register.full_name"
                                           styleClass="auth-field-label"/>
                                    <TextField fx:id="fullNameField"
                                               promptText="%register.enter_your_full_name"
                                               styleClass="auth-input"/>
                                </children>
                            </VBox>

                            <!-- Email -->
                            <VBox spacing="6.0">
                                <children>
                                    <Label text="%register.email_address"
                                           styleClass="auth-field-label"/>
                                    <TextField fx:id="emailField"
                                               promptText="%register.enter_your_email"
                                               styleClass="auth-input"/>
                                </children>
                            </VBox>

                            <!-- Password -->
                            <VBox spacing="6.0">
                                <children>
                                    <Label text="%common.password"
                                           styleClass="auth-field-label"/>
                                    <PasswordField fx:id="passwordField"
                                                   promptText="%register.create_a_password"
                                                   styleClass="auth-input"/>
                                </children>
                            </VBox>

                            <!-- Confirm password -->
                            <VBox spacing="6.0">
                                <children>
                                    <Label text="%register.confirm_password"
                                           styleClass="auth-field-label"/>
                                    <PasswordField fx:id="confirmPasswordField"
                                                   promptText="%register.confirm_your_password"
                                                   styleClass="auth-input"/>
                                </children>
                            </VBox>

                            <!-- Newsletter checkbox -->
                            <HBox alignment="CENTER_LEFT" spacing="8.0">
                                <children>
                                    <CheckBox fx:id="newsletterCheck"/>
                                    <Label text="%register.send_me_occasional_reading_tips_and_updates"
                                           wrapText="true"
                                           styleClass="auth-remember"/>
                                </children>
                            </HBox>

                            <!-- Terms text -->
                            <HBox alignment="CENTER_LEFT" spacing="4.0">
                                <children>
                                    <Label text="%register.by_creating_an_account_you_agree_to_the"
                                           styleClass="auth-remember"/>
                                    <Hyperlink text="%register.terms_of_service"
                                               styleClass="auth-bottom-link"/>
                                    <Label text="%register.and"
                                           styleClass="auth-remember"/>
                                    <Hyperlink text="%register.privacy_policy"
                                               styleClass="auth-bottom-link"/>
                                    <Label text="."
                                           styleClass="auth-remember"/>
                                </children>
                            </HBox>

                            <!-- Error label -->
                            <Label fx:id="errorLabel"
                                   styleClass="auth-error-label"
                                   wrapText="true"
                                   visible="false"
                                   managed="false"/>

                            <!-- Create account button -->
                            <Button fx:id="createAccountButton"
                                    text="%register.create_account"
                                    maxWidth="Infinity"
                                    styleClass="auth-primary-button"
                                    onAction="#onSignUp"/>

                        </children>
                    </VBox>

                    <!-- Bottom text -->
                    <HBox alignment="CENTER" spacing="4.0">
                        <children>
                            <Label text="%register.already_have_an_account"
                                   styleClass="auth-bottom-text"/>
                            <Hyperlink fx:id="loginLink"
                                       text="%register.log_in"
                                       styleClass="auth-bottom-link"
                                       onAction="#onGoToLogin"/>
                        </children>
                    </HBox>

                </VBox>

                <!-- Bottom spacer for vertical centering -->
                <Pane VBox.vgrow="ALWAYS"/>

            </children>
        </VBox>
    </center>
</BorderPane>
