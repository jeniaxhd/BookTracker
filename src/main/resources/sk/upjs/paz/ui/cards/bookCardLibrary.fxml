<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="cardRoot"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.upjs.paz.ui.BookCardLibraryController"
      prefWidth="210.0"
      spacing="10.0"
      styleClass="book-card,library-book-card">

    <children>

        <StackPane fx:id="coverLabel"
                   prefHeight="220.0"
                   styleClass="library-book-cover">
            <children>
                <Label styleClass="book-cover-placeholder-text" text="Cover"/>
            </children>
        </StackPane>

        <VBox spacing="4.0">
            <children>
                <Label fx:id="titleLabel" styleClass="library-book-title" text="Title" wrapText="true"/>
                <Label fx:id="authorLabel" styleClass="library-book-author" text="Author"/>
                <Label fx:id="genreLabel" styleClass="book-category-pill" text="Genre"/>
            </children>
        </VBox>

        <VBox spacing="4.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="6.0">
                    <children>
                        <Label fx:id="pages" styleClass="book-progress-text" text=""/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Label fx:id="statusLabel" styleClass="book-status-pill" text="NOT_STARTED"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="6.0">
                    <children>
                        <Label fx:id="lastTimeRead" styleClass="book-meta-text" text=""/>
                        <Pane HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
            </children>
        </VBox>

    </children>

    <padding>
        <Insets top="0" right="0" bottom="0" left="0"/>
    </padding>
</VBox>
