<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<VBox prefWidth="210.0" spacing="10.0" styleClass="book-card,library-book-card"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.upjs.paz.ui.CardBookLibraryController">

   <children>
      <StackPane fx:id="coverLabel" prefHeight="220.0" styleClass="library-book-cover">
         <children>
            <Label styleClass="book-cover-placeholder-text" text="Cover" />
         </children>
      </StackPane>

      <VBox spacing="4.0">
         <children>
            <Label fx:id="titleLabel" styleClass="library-book-title" text="The Midnight Library" wrapText="true" />
            <Label fx:id="authorLabel" styleClass="library-book-author" text="Matt Haig" />
            <Label fx:id="genreLabel" styleClass="book-category-pill" text="Fiction" />
         </children>
      </VBox>

      <VBox spacing="4.0">
         <children>
            <ProgressBar fx:id="progressBar" progress="0.61" styleClass="book-progress-bar" />

            <HBox alignment="CENTER_LEFT" spacing="6.0">
               <children>
                  <Label fx:id="pages" styleClass="book-progress-text" text="187 / 304 pages" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <Label fx:id="statusLabel" styleClass="book-status-pill" text="In Progress" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="6.0">
               <children>
                  <Label fx:id="lastTimeRead" styleClass="book-meta-text" text="Last read: 2 days ago" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <!-- якщо rating не використовуєш у контролері — fx:id не треба -->
                  <Label styleClass="book-rating-text" text="★★★★☆" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
