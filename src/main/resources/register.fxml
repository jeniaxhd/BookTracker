<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="@styles.css"
           styleClass="root">


    <VBox alignment="CENTER"
          spacing="20"
          maxWidth="450"
          prefWidth="400"
          fillWidth="true"
          styleClass="login-card">

        <Label text="Create Account" styleClass="title"/>

        <!-- FULL NAME -->
        <VBox spacing="6" VBox.vgrow="NEVER">
            <Label text="Full name" styleClass="label-text"/>
            <TextField promptText="Enter your full name"
                       styleClass="input-field"
                       maxWidth="Infinity"
                       prefWidth="Infinity"/>
        </VBox>

        <!-- EMAIL -->
        <VBox spacing="6">
            <Label text="Email address" styleClass="label-text"/>
            <TextField promptText="Enter your email"
                       styleClass="input-field"
                       maxWidth="Infinity"
                       prefWidth="Infinity"/>
        </VBox>

        <!-- PASSWORD -->
        <VBox spacing="6">
            <Label text="Password" styleClass="label-text"/>
            <PasswordField promptText="Create a password"
                           styleClass="input-field"
                           maxWidth="Infinity"
                           prefWidth="Infinity"/>
        </VBox>

        <!-- CONFIRM PASSWORD -->
        <VBox spacing="6">
            <Label text="Confirm password" styleClass="label-text"/>
            <PasswordField promptText="Confirm your password"
                           styleClass="input-field"
                           maxWidth="Infinity"
                           prefWidth="Infinity"/>
        </VBox>

        <!-- BUTTON -->
        <HBox prefWidth="Infinity">
            <Button text="Register"
                    HBox.hgrow="ALWAYS"
                    styleClass="primary-button"
                    maxWidth="Infinity"
                    prefHeight="42"/>
        </HBox>


        <!-- FOOTER -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" styleClass="secondary-text"/>
            <Hyperlink text="Log in" styleClass="link"/>
        </HBox>

    </VBox>

</StackPane>