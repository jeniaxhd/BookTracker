<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="@styles.css"
           styleClass="root">

    <AnchorPane>
        <children>
            <VBox alignment="CENTER"
                  spacing="26"
                  styleClass="login-card"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0"
                  AnchorPane.topAnchor="0"
                  AnchorPane.bottomAnchor="0"
                  maxWidth="600"
                  minWidth="350"
                  prefWidth="450">

                <!-- Title -->
                <Label text="Login" styleClass="title"/>

                <!-- Email -->
                <VBox spacing="8" maxWidth="Infinity">
                    <Label text="Email address" styleClass="label-text"/>
                    <TextField promptText="you@example.com"
                               styleClass="input-field"
                               maxWidth="Infinity"/>
                </VBox>

                <!-- Password -->
                <VBox spacing="8" maxWidth="Infinity">
                    <HBox spacing="6" maxWidth="Infinity">
                        <Label text="Password" styleClass="label-text"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Hyperlink text="Forgot password?" styleClass="link"/>
                    </HBox>
                    <PasswordField promptText="••••••••"
                                   styleClass="input-field"
                                   maxWidth="Infinity"/>
                </VBox>

                <!-- Button -->
                <Button text="Log in"
                        styleClass="primary-button"
                        prefHeight="45"
                        maxWidth="Infinity"/>

                <!-- Footer -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" styleClass="secondary-text"/>
                    <Hyperlink text="Sign up" styleClass="link"/>
                </HBox>

            </VBox>
        </children>
    </AnchorPane>

</StackPane>
